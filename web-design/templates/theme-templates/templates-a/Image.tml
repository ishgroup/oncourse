<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
  <t:if test="image">
    <img itemprop="image" src="${path}" align="${align}" alt="${alt}" title="${title}" width="${width}" height="${height}" class="${cssClass}" />
    <meta property="og:image" content="${path}" />
    <p:else>
      <!-- <img alt="${name}"/> -->
    </p:else>
  </t:if>
</t:container>