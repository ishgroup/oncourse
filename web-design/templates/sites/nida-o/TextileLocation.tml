<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <div class="filter-option">
        <input id="location_${identifier}" name="location_${identifier}" type="checkbox" class="filter-option-control"
               data-path="${path.toLowerCase()}" data-counter="${counter}"/>
        <label class="checkbox filter-option-label" for="location_${identifier}">${display}</label>
        <span class="filter-option-counter">(${counter})</span>
    </div>
</t:container>