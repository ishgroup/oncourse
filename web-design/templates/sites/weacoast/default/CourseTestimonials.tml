<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
  <t:if test="hasItems">
    <div class="courseTestimonials">
      <h3>Course testimonials:</h3>
      <div class="courseTestimonials-scroller">
        <ul class="slides">
          <t:loop source="surveys" value="survey">
            <t:if test="survey.testimonial">
              <li>${survey.testimonial}</li>
            </t:if>
          </t:loop>
        </ul>
      </div>
    </div>
  </t:if>
</t:container>
