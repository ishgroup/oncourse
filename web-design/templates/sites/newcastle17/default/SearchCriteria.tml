<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

<t:if t:test="browseTagPath">
	<ol class="breadcrumbs faux-breadcrumbs js-breadcrumbs" itemscope="itemscope" itemtype="http://schema.org/BreadcrumbList">
		<li class="breadcrumbs__item" itemprop="itemListElement" itemscope="itemscope" itemtype="http://schema.org/ListItem">
			<a class="breadcrumbs__link breadcrumbs__link--home" itemscope="itemscope" itemtype="http://schema.org/Thing" itemprop="item" href="/">
				<meta itemprop="name" content="Home" />
				<meta itemprop="image" content="https://${request.serverName}/s/img/schema/image.jpg" alt="Home" />
				<svg class="breadcrumbs__home-icon" aria-label="Home" role="img" focusable="false" xmlns:xlink="http://www.w3.org/1999/xlink">
					<use xlink:href="#svg-house" />
				</svg>
			</a>
			<meta itemprop="position" content="1" />
			<svg class="breadcrumbs__arrow" role="img" focusable="false" xmlns:xlink="http://www.w3.org/1999/xlink">
				<use xlink:href="#svg-angle" />
			</svg>
		</li>
		<li class="breadcrumbs__item" itemprop="itemListElement" itemscope="itemscope" itemtype="http://schema.org/ListItem">
			<a class="breadcrumbs__link" itemscope="itemscope" itemtype="http://schema.org/Thing" itemprop="item" href="/courses">
				<span itemprop="name">Courses</span>
				<meta itemprop="image" content="https://${request.serverName}/s/img/courses/_default.jpg" alt="Courses" />
			</a>
			<meta itemprop="position" content="2" />
			<svg class="breadcrumbs__arrow" role="img" focusable="false" xmlns:xlink="http://www.w3.org/1999/xlink">
				<use xlink:href="#svg-angle" />
			</svg>
		</li>
		<t:loop source="browseTagPath" value="tag" index="tagIndex">
			<t:if t:test="showTagRaquo">
				<li class="breadcrumbs__item" itemprop="itemListElement" itemscope="itemscope" itemtype="http://schema.org/ListItem">
					<a href="${tag.link}" class="breadcrumbs__link" itemscope="itemscope" itemtype="http://schema.org/Thing" itemprop="item">
						<span itemprop="name">${tag.name} Courses</span>
						<meta itemprop="image" content="https://${request.serverName}/s/img${tag.link}.jpg" alt="${tag.name} Courses" />
					</a>
					<svg class="breadcrumbs__arrow" role="img" focusable="false" xmlns:xlink="http://www.w3.org/1999/xlink">
						<use xlink:href="#svg-angle" />
					</svg>
				</li>
				<p:else>
				<li class="breadcrumbs__item  breadcrumbs__item--current" itemprop="itemListElement" itemscope="itemscope" itemtype="http://schema.org/ListItem">
					<span itemscope="itemscope" itemtype="http://schema.org/Thing" itemprop="item">
						<span itemprop="name">${tag.name} Courses</span>
						<meta itemprop="image" content="https://${request.serverName}/s/img${tag.link}.jpg" alt="${tag.name} Courses" />
					</span>
				</li>
				</p:else>
			</t:if>
		</t:loop>
	</ol>
</t:if>

</t:container>