<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>parent</artifactId>
		<groupId>ish.oncourse.willow</groupId>
		<version>1.25</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>


	<groupId>ish.oncourse.willow</groupId>
	<artifactId>searchapp</artifactId>
	<version>2.5</version>
	<packaging>war</packaging>
	
	<name>Willow - Search Web App</name>
	<description>onCourse Willow Search application wrapper over Solr.</description>

	<properties>
		<netbeans.hint.deploy.server>Tomcat60</netbeans.hint.deploy.server>
		<tomcat.cluster>A</tomcat.cluster>
		<tomcat-dev.port>7001</tomcat-dev.port>
		<tomcat-test.port>10001</tomcat-test.port>
		<tomcat-staging.port>10001</tomcat-staging.port>
		<tomcat.path>/search-internal</tomcat.path>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.apache.solr</groupId>
			<artifactId>solr</artifactId>
			<version>3.3.0</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.apache.solr</groupId>
			<artifactId>solr-dataimporthandler</artifactId>
			<version>3.3.0</version>
		</dependency>
		<dependency>
			<groupId>ish.oncourse.willow.frameworks</groupId>
			<artifactId>common-model</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.liquibase</groupId>
  			<artifactId>liquibase-core</artifactId>
  		</dependency>
	</dependencies>

	<build>
		<finalName>search-internal</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<scm>
		<connection>scm:svn:https://svn.ish.com.au/ish/willow/tags/searchapp/searchapp-2.5</connection>
		<developerConnection>scm:svn:https://svn.ish.com.au/ish/willow/tags/searchapp/searchapp-2.5</developerConnection>
		<url>http://websvn.ish.com.au/ish/willow/tags/searchapp/searchapp-2.5</url>
	</scm>
	
	<repositories>
		<repository>
			<id>ish repo</id>
			<name>ish repository</name>
			<url>http://repo.ish.com.au/content/groups/ish</url>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
</project>
