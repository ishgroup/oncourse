<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">
	
	<New id="solrHome" class="org.eclipse.jetty.plus.jndi.EnvEntry">
		<Arg>solr/home</Arg>
		<Arg type="java.lang.String">/var/onCourse/solr</Arg>
	</New>

	<New id="onCourseDS" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg></Arg>
		<Arg>jdbc/oncourse</Arg>
		<Arg>
			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<Set name="Url">jdbc:mysql://localhost:3306/willow_college?autoReconnect=true
				</Set>
				<Set name="User">root</Set>
				<Set name="Password">test</Set>
			</New>
		</Arg>
	</New>

	<New id="onCourseRef" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg></Arg>
		<Arg>jdbc/oncourse_reference</Arg>
		<Arg>
			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<Set name="Url">jdbc:mysql://localhost:3306/willow_reference?autoReconnect=true
				</Set>
				<Set name="User">root</Set>
				<Set name="Password">test</Set>
			</New>
		</Arg>
	</New>

	<New id="onCourseBinary" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg></Arg>
		<Arg>jdbc/oncourse_binary</Arg>
		<Arg>
			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<Set name="Url">jdbc:mysql://localhost:3306/willow_binary?autoReconnect=true
				</Set>
				<Set name="User">root</Set>
				<Set name="Password">test</Set>
			</New>
		</Arg>
	</New>
</Configure>