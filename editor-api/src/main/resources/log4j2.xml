<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">
    <Properties>
        <Property name="name">willow_editor-api</Property>
        <Property name="ConsoleOutputPattern">%d{HH:mm:ss.SSS} [%t] %-5p %c:%L - %m %X%x%n%ex</Property>
    </Properties>
    <Appenders>
        <RollingFile name="FILE" fileName="${sys:logs.path}/${name}.log" filePattern="${sys:logs.path}/${name}.log.%i">
            <JsonLayout compact="true" eventEol="true"/>
            <SizeBasedTriggeringPolicy size="10M"/>
            <DefaultRolloverStrategy/>
        </RollingFile>
        <RollingFile name="FILE_ERROR" fileName="${sys:logs.path}/${name}-error.log"
                     filePattern="${sys:logs.path}/${name}-error.log.%i">
            <JsonLayout compact="true" eventEol="true"/>
            <SizeBasedTriggeringPolicy size="10M"/>
            <DefaultRolloverStrategy/>
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <!-- pattern to output console -->
            <PatternLayout pattern="${ConsoleOutputPattern}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="FILE_ERROR" level="error"/>
            <AppenderRef ref="FILE" level="warn"/>
            <AppenderRef ref="STDOUT" level="debug"/>
        </Root>
        <Logger name="ish.oncourse.util.log.LogAppInfo" level="info">
            <AppenderRef ref="FILE"/>
        </Logger>
        <Logger name="io.bootique.jetty.server.ServerLifecycleLogger" level="info">
            <AppenderRef ref="FILE"/>
        </Logger>
    </Loggers>
</Configuration>
