<html t:type="ui/dialogstructure" title="literal:My Discounts"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter">
	
	<!--<p>${message:message.enter.discount}</p>-->
    <p>Sometimes we are able to offer discounts on a selection of our classes. If you have a discount code, then please enter it into the box below</p>
	<t:zone t:id="addDiscountZone">
	<t:form t:id="addDiscountForm" zone="addDiscountZone">
		<!--<label for="promo">${message:label.discount.code}</label>-->
        <label for="promo">Discount code:</label>
		<t:textField name="promo" value="promoCode" />
        <t:submit value="add"/>
		<!--<t:submit value="message:submit.add" />-->
		${errorMessage}
	</t:form>
	<t:if test="promotionsList.empty" negate="true">
		<p class="discount_options">
			${message:message.list.discount} 
			<br />
			<a href="/" onclick="window.parent.location.reload(true);return false;">${message:link.update.page}</a>
		</p>

		<t:loop source="promotionsList" value="addedPromotion">
			<h5 class="popup-name">${addedPromotion.code}</h5>
			<div class="clear"></div>
			<p><t:outputRaw value="addedPromotion.detail"/></p>
			<div class="divideline"></div>
		</t:loop>
		<p>${message:message.update.page}</p>
	</t:if>
	</t:zone>

    <p class="note"><strong class="alert">Please note:</strong> Our discounts are usually only available until a certain
        date, so you may not be able to use an old discount code.</p>

    <!--<p class="note">
         <strong class="alert">${message:message.note}</strong>${message:message.discount.expiery}
	</p>-->

</html>
