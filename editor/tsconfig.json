{
  "compilerOptions": {
    "rootDirs": [
      "src/js",
      "src/dev",
      "src/test"
    ],
    "outDir": "build/ts",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "module": "esnext",
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "es5",
      "es6",
      "es7"
    ]
  },
  "exclude": [
    "out",
    "node_modules",
    "build/resources"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
