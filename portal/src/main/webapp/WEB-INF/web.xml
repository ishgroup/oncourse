<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="true" version="3.0">

	<display-name>oncourse-portal</display-name>

	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>ish.oncourse.portal</param-value>
	</context-param>
	
	<context-param>
		<param-name>applicationName</param-name>
		<param-value>portal</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:application-context-usi.xml</param-value>
	</context-param>

	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.spring.TapestrySpringFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>

	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

    <!--CheckDBVersionListener validates that all liquibase changeSets are applied. -->
    <context-param>
        <param-name>liquibase.changelog</param-name>
        <param-value>liquibase.db.changelog.xml</param-value>
    </context-param>

    <context-param>
        <param-name>liquibase.datasource</param-name>
        <param-value>java:comp/env/jdbc/oncourse</param-value>
    </context-param>

    <context-param>
        <param-name>liquibase.onerror.fail</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>liquibase.contexts</param-name>
        <param-value>production</param-value>
    </context-param>

    <listener>
        <listener-class>ish.oncourse.listeners.CheckDBVersionListener</listener-class>
    </listener>

    <listener>
  		<listener-class>ish.oncourse.listeners.TheLeakPreventionListener</listener-class>
  	</listener>
  	
	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>

	<error-page>
    	<error-code>404</error-code> 
   		<location>/PageNotFound</location>
  	</error-page>
  	
</web-app>