<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <div id="usi-form" class="">
        <div class="row">
            <div class="col-sm-12">
                <fieldset> 

                    <div class="bs-callout bs-callout-info">
                        <h5>Update your personal details</h5>
                        <p> <strong>There are some contact details we do not have on file for you.</strong><br />                    
                        We would appreciate if you could complete the information below.
                        </p>
                    </div>

                    <div class="form-group">
                        <label class=" control-label" for="gender">Gender</label>
                        <div class="field-holder">
                            <label class="radio-inline" for="female">
                                <input type="radio" name="isMale" id="female" value="female" class="form-control"/>Female</label>
                            <label class="radio-inline" for="male">
                                <input type="radio" name="isMale" id="male" value="male" class="form-control"/>Male</label>
                        </div>
                        <small class="help-block"></small>
                    </div>


                    <div class="form-group has-feedback">
                        <label class=" control-label" for="street">Street address</label>
                        <div class="field-holder">
                            <input id="street" name="street" type="text" placeholder="For example, 215 Anzac Parade" class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>


                    <div class="form-group has-feedback">
                        <label class=" control-label" for="suburb">Suburb</label>
                        <div class="field-holder">
                            <input id="suburb" name="suburb" type="text" placeholder="For example, SYDNEY" class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>

                    <div class="form-group has-feedback">
                        <label class=" control-label" for="postcode">Postcode</label>
                        <div class="field-holder">
                            <input id="postcode" name="postcode" type="text" placeholder="For example, 2033" class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>

                    <div class="form-group has-feedback">
                        <label class=" control-label" for="state">State</label>
                        <div class="field-holder">
                            <input id="state" name="state" type="text" placeholder="For example, NSW" class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>

                    <div class="form-group has-feedback">
                        <label class=" control-label" for="country">Ð¡ountry</label>
                        <div class="field-holder">
                            <input id="country" name="country" type="text" placeholder="For example, Australia" class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>


                    <div class="form-group has-feedback">
                        <label class=" control-label" for="mobilePhoneNumber">Mobile phone</label>
                        <div class="field-holder">
                            <input id="mobilePhoneNumber" name="mobilePhoneNumber" type="text" placeholder="For example, 04123 456 789 " class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>


                    <div class="form-group has-feedback">
                        <label class=" control-label" for="homePhoneNumber">Home phone</label>
                        <div class="field-holder">
                            <input id="homePhoneNumber" name="homePhoneNumber" type="text" placeholder="For example, +44 2 1234 5678 " class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>


                    <div class="form-group has-feedback">
                        <label class=" control-label" for="businessPhoneNumber">Work phone</label>
                        <div class="field-holder">
                            <input id="businessPhoneNumber" name="businessPhoneNumber" type="text" placeholder="For example, +44 2 1234 5678 " class="form-control input-md" />
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                        <small class="help-block"></small>
                    </div>

                    <div class="form-group has-feedback">
                        <label class=" control-label" for="specialNeeds">Special needs or medical conditions</label>
                        <div class="field-holder">
                            <textarea class="form-control" id="specialNeeds" name="specialNeeds"/>
                        </div>
                        <small class="help-block"></small>
                    </div>

                    <div class="form-group">
                        <div class="actions">
                            <button class="btn btn-primary" id="usi-next">Next</button>
                        </div>
                    </div>

                </fieldset>
            </div>
        </div>
    </div>
</t:container>