<html t:type="pagestructure" title="literal:Class Approval"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

    <div class="page-header clearfix">
        <h1><a href="#">${courseClass.course.name} </a> <small> (${courseClass.uniqueIdentifier})</small></h1>
        <span class="label label-primary pull-right">Approval required</span>
    </div>


	<t:form t:id="approvalForm" clientValidation="literal:NONE">
		<t:if test="isClassApproved" negate="true">
            <div class="checkbox">
			    <t:checkbox t:id="approved" value="approved"/>
			    <label for="approved"><span>I agree that the date, time, venue and description of the class are all correct and that I am able to teach the class material at the times stated.</span></label>
			</div>
            <p>
			    <t:submit t:id="accept" value="Accept" disabled="approved"  class="btn btn-success agree-btn btn1 mb20"/>
			</p>
			<p:else>
				<span>The class has already been approved.</span>
				<div class="cl mb15"></div>
				<div class="bord mb20"></div>
			</p:else>
	 	</t:if>
		<t:errors banner="literal:" class="literal:validation alert alert-block alert-danger"/>

		<!-- textarea -->
        <div class="row decline-content">
            <div class="col-lg-12 col-sm-12">
                <label>I don't agree for the following reasons:</label>
                <div class="row">
                    <p class="col-lg-8 col-sm-8">
                        <t:textarea t:id="whyDeclined" t:value="whyDeclined" class="form-control"  row="3"></t:textarea>
                    </p>
                </div>
                <t:submit t:id="decline" value="Submit" class="btn btn-default btn-sm"/>
            </div>
        </div>
	</t:form>
	
</html>
