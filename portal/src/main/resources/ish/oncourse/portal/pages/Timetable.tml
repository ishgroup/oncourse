<html t:type="pagestructure" title="literal:Time Table" showSideBar="false"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:timetable">
	<div id="mytimetablepage" class="page-header clearfix">
		
		<t:if test="showTeam">
			<h1 class="pull-left timetable-header">
				<a href="#">Team Timetable</a>
			</h1>
			<div class="caption-classes" id="team-timetable">
				<ul>
					<li role="presentation">
						<a class="btn-lg btn-sm btn-primary" href="#my-timetables" data-toggle="tab">
							Show My Timetable
						</a>
					</li>
				</ul>
			</div>
		</t:if>
		<t:unless test="showTeam">
			<h1 class="pull-left timetable-header">
				<a href="#">Timetable</a>
			</h1>
		</t:unless>
		
		<div class="sync-to-device zero-right vertical-center"
			 value="webcal:${request.serverName}${request.contextPath}/calendar/${portalService.contact.uniqueCode}.ics">
			<span class="glyphicon glyphicon-cloud-download" aria-hidden="true"/>
			<span>SYNC TO DEVICE</span>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-3 col-md-5 col-sm-12">
			<!-- calenderio; now we have small calendar; in this step I can't see mark in calender, because I can't get data to a static page;  -->
			<div class="calendar-container" id="small-calendar">
				<div class="custom-calendar-wrap">
					<div id="custom-inner" class="custom-inner">
						<div class="custom-header clearfix">
							<nav>
								<span id="custom-prev" class="custom-prev"></span>
								<span id="custom-next" class="custom-next"></span>
							</nav>
							<h2>
								<span id="custom-month" class="custom-month"></span> 
								
								<span id="custom-year" class="custom-year"></span>
							</h2>
						</div>
						<div id="calendar" class="fc-calendar-container"></div>
					</div>
				</div>
			</div>
			<t:if test="!showTeam">
				<div class="page-header">
					<h4>Your Classes</h4>
				</div>
	
				<div class="your-classes-list">
				</div>
			</t:if>
		</div>

		<div class="row col-lg-9 col-md-7 col-sm-12 panel-group" id="accordion">
		</div>
	</div>

	<t:block t:id="yourClasses">
		<div t:type="timetable/yourclasses" month="month" student="student" tutor="tutor"/>
	</t:block>

	<t:block t:id="sessionsSideBar">
		<!--<div t:type="timetable/sessionsSideBar" month="month" contact="contact" showTeam="showTeam"/>-->
		<div t:type="timetable/sessionsSideBar" month="month"  pageSize="pageSize" offset="offset" contact="contact" showTeam="showTeam"/>
	</t:block>
</html>