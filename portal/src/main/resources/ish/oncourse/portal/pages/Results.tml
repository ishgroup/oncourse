<html t:type="pagestructure" title="literal:Results"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:results">
	<div class="page-header clearfix">
		<h1><a href="#">Results</a></h1>
	</div>
	<ul class="list-unstyled result-content">
        <t:loop source="courseClasses" value="courseClass">

        <t:if test="${isVisible(courseClass)}">
		<li>
            <h4>
                <a href="${URL}" target="${target}">${courseClass.course.name}</a>
                <small> (${courseClass.uniqueIdentifier})</small>
            </h4>
            <p><small class="text-muted">${getDate(courseClass)}</small></p>
			<span t:type="courseclass/classresults" courseClass="courseClass"/>
		</li>
         </t:if>

        </t:loop>
	</ul>
</html>