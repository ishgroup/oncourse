<html t:type="pagestructure" title="literal:Results"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:results">
    <t:if test="hasAnyResults()">
        <div class="page-header clearfix">
            <h1><a href="#">Results</a></h1>
        </div>
        <ul class="list-unstyled">
            <t:loop source="courseClasses" value="courseClass">
				<t:if test="hasResult()">
					<li>
						<h6>
							<t:pagelink page="class" context="courseClass.id">${courseClass.course.name}</t:pagelink>
							<small> (${courseClass.uniqueIdentifier})</small>
						</h6>
						<p><small class="text-muted">${date}</small></p>
						<t:courseclass.classresults courseClass="courseClass"/>
						<t:if test="showSurveys()">
							<h6>Rate your class
								<span class="rating rate-inline rate-class">
									<input type="hidden" name="score"/>
								</span>
							</h6>
							<t:surveys.surveys courseClass="courseClass" isTutor="false"/>
						</t:if>
					</li>
				</t:if>
            </t:loop>
        </ul>
    </t:if>
    <t:unless test="hasAnyResults()">
        <h3>No results available.</h3>
    </t:unless>
</html>