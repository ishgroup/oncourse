<html t:type="pagestructure" title="literal:Resources"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:resources">
	<div class="page-header clearfix">
		<h3><a href="#">Resources</a></h3>
	</div>
	<ul class="list-unstyled resources-content">

        <t:if test="tutorsMaterials">
            <li>
            <h4><a href="#">Tutors information</a></h4>

            <t:loop source="tutorsMaterials" value="tutorsMaterial">
                <ul class="list-unstyled resources-list">
                <div class="${tutorsMaterial.type}">
                    <img src="${contextPath}/img/ico-${tutorsMaterial.type}.png" alt=""/>
                    <a href="${tutorsMaterialUrl}">${tutorsMaterial.name}<t:if test="tutorsMaterial.type.empty" negate="true">.${tutorsMaterial.type}</t:if></a> ${tutorsMaterial.size} kb.
                    <t:if test="isNew(tutorsMaterial.modified)">
                        <span class="label label-primary">NEW</span>
                    </t:if>
                </div>
                </ul>
            </t:loop>
            </li>
        </t:if>


        <t:loop source="courseClasses" value="courseClass">

        <t:if test="${hasResources(courseClass)}">
		<li>
            <h4>
                <a href="${classDetailsURL}" target="_blank">
                    ${courseClass.course.name}
                </a>
                <small> (${courseClass.uniqueIdentifier})</small>
            </h4>
			<small class="text-muted">${getDate(courseClass)}</small>
			<ul class="list-unstyled resources-list">
				<span t:type="courseclass/classresources" courseClass="courseClass"></span>
			</ul>
		</li>
        </t:if>

        </t:loop>
	</ul>
</html>