<html t:type="pagestructure" title="literal:Profile"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:profile">

<div class="page-header clearfix zero-padding">
    <ul class="nav nav-tabs header-tabs">
        <i class="glyphicon glyphicon-chevron-down toggle-tabs"></i>
        <li id="tab_profile"><a data-toggle="tab" href="#profile-form">Profile details</a></li>
        <li id="tab_password"><a data-toggle="tab" href="#password-form">Change password</a></li>
        <t:if test="showCensusTab()">
            <li id="tab_census"><a data-toggle="tab" href="#census-questions">Census Questions</a></li>
        </t:if>
    </ul>
    <h1><a href="#">${contact.fullName}'s Profile</a></h1>
</div>
<div class="tab-content">
    <div class="tab-pane" id="profile-form">
        <span t:type="profile/profileform" contact="contact"/>
    </div>
    <div class="tab-pane" id="password-form">
        <span t:type="profile/passwordform" contact="contact"/>
    </div>
    <t:if test="showCensusTab()">
        <div class="tab-pane" id="census-questions">
            <span t:type="profile/censusform" contact="contact"/>
        </div>
    </t:if>
</div>

</html>
