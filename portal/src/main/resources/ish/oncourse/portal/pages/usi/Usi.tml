<!DOCTYPE html>
<html title="Student Identification"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
        >
    <t:pageheader title="literal:Student Identification"/>
    <body id="usi-page">
        <span id="usiStep" class="hidden" data-step="${step}"/>
        <t:delegate to="block:bodyheader"/>
        <div id="wrap">
            <div class="container">
                <div class="col-md-5 col-sm-12 main-container usi-form-holder">
                    <h1>${contact.fullName}</h1>
                    <div class="row">
                        <div id = "main-container" class="col-sm-12 main-container">
                            <t:delegate to="block:progress"/>
                            <t:usi.currentstep usiController="usiController"/>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <t:bodyfooter/>
    </body>

    <t:block t:id="bodyheader">
        <div class="navbar navbar-fixed-top">
            <div class="header-top">
                <div class="container">
                  <span class="navbar-brand">
                    <a href="${request.contextPath}"><img src="/portal/img/logo-v3.png" alt=""/></a>
                  </span>
                </div>
            </div>
            <t:usi.progress usiController="usiController"/>
        </div>
    </t:block>
    <t:block t:id="progress">
        <t:usi.wait usiController="usiController" />
    </t:block>
</html>