<html t:type="pagestructure" title="literal:Login page" bodyClass="literal:login-wrapper"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div class="login">
	
		<t:form t:id="loginForm">
			<t:errors />
			<div class="form-row">
				<p class="ascompany"><t:label for="iscompany">As company</t:label>
					<t:checkbox onclick="set_is_company(this.checked)" t:id="iscompany" value="iscompany"  style="float: right;" />
				</p>
			</div>
			<div style="display: none;" class="form-row company-details collapse">
				<t:TextField t:id="companyName" t:validate="required,minlength=3" type="text" maxlength="300" class="input" placeholder="Company Name"/>
			</div>
			<div style="display: block;" class="form-row user-details ">
				<t:TextField t:id="firstName" t:validate="required,minlength=3" type="text" maxlength="300" class="input" placeholder="First name"/>
			
				<t:TextField t:id="lastName" t:validate="required,minlength=3" type="text" maxlength="300" class="input" placeholder="Last name"/>
			</div>
			<div class="form-row">
				<t:TextField t:id="email" t:validate="required,minlength=3" type="text" maxlength="300" class="input" placeholder="E-mail"/>
			</div>
			<div class="form-row">
				<input t:type="PasswordField" t:id="password" type="text" maxlength="300" class="input"
					t:validate="required,minlength=3" placeholder="Password"/>
			</div>
			<button type="submit" class="btn">Login</button>
		</t:form>
	
		<div class="login-send-pass">
			<button type="button" class="btn">Send Me My Password</button>
		</div>
		
	</div>

</html>