<html t:type="pagestructure" title="literal:Surveys"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_surveys">
	
	<div class="class-info-title">
		<a href="#" class="back-class">Classes</a>
		<span>${courseClass.course.name}</span>
		<div class="clear"></div>
		<span t:type="classTabs" courseClass="courseClass" selected="literal:classSurvey"/>
	</div>
	
    <div class="avg-rankings">
		<h5>Average ( <span>3 rankings</span> )</h5>
		<ul class="raging-info">
			<li>
				<span>
					<i class="icon-user icon-white"></i>
					<t:loop  source="tutorRoles" value="tutorRole" formState="none">
						${tutorRoleName}
					</t:loop>
				</span>
				<font>
					<span t:type="rating" id="ratingTutor" value="roundedTutorAverage"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-file icon-white"></i>${courseName}
				</span>
				<font>
					<span t:type="rating" id="ratingCourse" value="roundedCourseAverage"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-home icon-white"></i>${room}
				</span>
				<font>
					<span t:type="rating" id="ratingVenue" value="roundedVenueAverage"/>
				</font>
			</li>
		</ul>
	</div>
	<div class="survey-content">
		<t:loop source="surveys" t:value="survey">
			<span t:type="surveyItem" survey="survey"/>
		</t:loop>
	</div>
</html>