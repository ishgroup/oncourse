<html t:type="pagestructure" title="literal:Surveys" bodyClass="literal:surveys-wrapper"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_surveys">

<t:if test="courseClass">
	<t:delegate to="block:surveysForClass"/>
</t:if>

<t:if test="tutorContact">
	<t:delegate to="block:surveysForTutor"/>
</t:if>
<div class="survey-content">
	<t:loop source="surveys" t:value="survey">
		<span t:type="surveyItem" survey="survey"/>
	</t:loop>
</div>


<t:block t:id="surveysForClass">
	<span t:type="classinfotitle" courseClass="courseClass" selected="literal:classSurvey"/>

	<div class="avg-rankings">
		<h5>Average ( <span>3 rankings</span> )</h5>
		<ul class="raging-info">
			<li>
				<span>
					<i class="icon-user icon-white"></i>
					<t:loop  source="tutorRoles" value="tutorRole" formState="none">
						${tutorRoleName}
					</t:loop>
				</span>
				<font>
					<span t:type="rating" id="ratingTutor" value="roundedTutorAverage" editable="false"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-file icon-white"></i>${courseName}
				</span>
				<font>
					<span t:type="rating" id="ratingCourse" value="roundedCourseAverage" editable="false"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-home icon-white"></i>${room}
				</span>
				<font>
					<span t:type="rating" id="ratingVenue" value="roundedVenueAverage" editable="false"/>
				</font>
			</li>
		</ul>
	</div>
</t:block>

<t:block t:id="surveysForTutor">
	<div class="avg-rankings">
		<h5>Average ( <span>${totalAverage}</span> )</h5>
		<ul class="raging-info">
			<li>
				<span>
					<i class="icon-user icon-white"></i>
					${tutorContact.fullName}
				</span>
				<font>
					<span t:type="rating" id="ratingTutor" value="roundedTutorAverage"/>
				</font>
			</li>
		</ul>
	</div>
</t:block>
</html>