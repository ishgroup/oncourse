<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div id="wrapper">
		<div id="scroller">
			<t:if t:test="userInSession">
				<a href="#" t:type="ActionLink" t:id="logout" class="btn-log">Logout</a>
			</t:if>
			<div class="content-container">
				<t:body/>
			</div>
		</div>
	</div>
	<div id="footer">
		<div class="footer-container">
			<t:if t:test="userInSession">
				<div t:type="menu"></div>
			</t:if>
		</div>
	</div>
</t:container>

