<html t:type="pagestructure" title="literal:Timetable list" bodyClass="literal:timetablelist-wrapper"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	
	<h1>Timetable</h1>
	
	<div class="btn-tabs">
		<div class="btn-group btn-tabs">
			<t:pagelink id="timetableMonth" page="prop:monthPageName" class="btn" >Month</t:pagelink>
			<t:pagelink id="timetableList" page="prop:listPageName" class="btn btn-active disabled">List</t:pagelink>
		</div>
	</div>
	<div class="clear"></div>
	
	<div id="list" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
		<t:if test="hassessions">
			<div class="entry-info">
				<t:loop source="sessionsByDate" value="currentBucket">
					<t:loop source="currentBucket.value" value="session">
						<div class="day-info">
							<div class="left-info">
								<p class="${dayClass}">${day}-${month}   ${time}.<t:if test="today"><i>today</i></t:if></p>
								<strong><t:pagelink page="class" context="session.courseClass.id">${name}</t:pagelink></strong>
								<div>
									<t:if test="hasRoomAndSite">
										<i class="icon icon-map-marker"></i>${session.room.site.name}
									</t:if> 
									<t:if test="tutors.empty" negate="true">
										<t:loop source="tutors" value="tutor">
											<i class="icon icon-user"></i>${tutor.fullName}
										</t:loop>
									</t:if>
								</div>
							</div>
							<div class="right-info">
								<i class="icon-chevron-right"></i>
							</div>
							<div class="clear"></div>
						</div>
					</t:loop>
				</t:loop>
			</div>
			<p:else>
				You have no currently scheduled classes.
			</p:else>
		</t:if>
	</div>
</html>
	


