<html t:type="pagestructure" title="literal:Class Approval" bodyClass="literal:approval-wrapper"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">

	<span t:type="classinfotitle" courseClass="courseClass" selected="literal:classApproval"/>

	<div class="approval-content">
		<t:form t:id="approvalForm">
			<t:if test="isClassApproved" negate="true">
				<label class="checkbox"><t:checkbox t:id="approved"/>I hereby agree that the date, time, venue  and description of the class are all correct and that I am able to teach the calss material at the times stated.</label>
				<t:textarea t:id="whyDeclined" placeholder="Comments" row="7"></t:textarea>
				<div class="button-content"><t:linksubmit t:id="accept" class="btn1 mb20">Accept</t:linksubmit></div>
				<p:else>
					The class has already been approved.
				</p:else>
			</t:if>
			<t:errors banner="literal:Please correct the following mistakes:" class="literal:validation"/>
		</t:form>
	</div>
	
</html>
