<html t:type="pagestructure" title="literal:Classes" bodyClass="literal:message"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<div class="message-title">
		<a href="#" class="back-message">Messages</a>
		<span>$(messageTitle}</span>
		<div class="clear"></div>
	</div>
	<a href="#" class="heading message-heading">Class: ${class.name} <i class="icon-chevron-right pull-right icon-white"></i></a>
	<div class="class-content">
		<t:loop source="classes" value="currentClass">
			<div class="single-class-info">
				
				<t:if test="isClassDeleted">
					<div class="class-delete"><strong>Deleted</strong> ${month} ${day}, ${time}</div>
				</t:if>
				
				<p class="class-title">
					<strong>${currentClass.course.name}</strong> <t:if test="isClassEdited"><font>edited</font></t:if> ${month} ${day} | ${time} <t:if test="isEditable"><span>Edit</span></t:if>
				</p>
				<p>${message}</p>
			</div>
		</t:loop>
	</div>
	<div class="comment-content">
		<textarea rows="3" placeholder="Write comment here"></textarea>
		<input type="button" class="btn" value="Add comment" />
	</div>
</html>