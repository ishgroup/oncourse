<html t:type="pagestructure" title="literal:Classes"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter" activeMenu="literal:m_CurrentClasses">
		<h1>Classes</h1>
		<div class="content">
			<t:if test="hasClasses">
				<table class="class" align="center" width="100%">
					<t:loop  source="classes" value="courseClass">
						<tr>
							<td width="64">
								<div class="book"><img src="${contextPath}/img/book.png" alt=""/></div>
							</td>
							<td>
								<div class="class-name">
									<t:pagelink page="prop:classPageName" context="courseClass.id">${courseName}</t:pagelink>
									<span id="class-code" style="margin-left:10px;font-size:9px;">${courseClassCode}</span>
								</div>
								<div class="class-info">${classIntervalInfo}<span>${classSessionsInfo}</span></div>
								<div class="class-place light"><i class="icon icon-map-marker"></i> ${room}</div>
								<div>
									<t:if test="${currentContactStudent}">
										<t:loop  source="tutorRoles" value="tutorRole">
											<div class="class-man"><i class="icon icon-user"></i> ${tutorRoleName} </div>
										</t:loop>
									</t:if>
								</div>
							</td>
						</tr>
					</t:loop> 
				</table>
				<p:else>
				   <t:if test="filterCurrent">
					   You have no currently scheduled classes.
						<p:else>
							<t:if test="filterPast">
								You have no scheduled classes in past.
								<p:else>
									<t:if test="filterUnconfirmed">
										You have no unconfirmed classes.
									</t:if>
								</p:else>
							</t:if>
						</p:else>
				   </t:if>
				</p:else>
			</t:if>
	</div>

</html>
