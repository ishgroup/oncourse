<html t:type="pagestructure" title="literal:Class" bodyClass="literal:survey-wrapper"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">

	<span t:type="classinfotitle" courseClass="courseClass" selected="literal:classSurvey"/>
	<h1>${courseClass.course.name}</h1>

	<t:form t:id="surveyForm">
		<t:errors/>
		<table align="center" border="0" cellspacing="0" cellpadding="0" class="survey-table">
			<tr>
				<td><div class="book"><img src="${contextPath}/img/ico-course-b.png" alt="" /></div></td>
				<td>

					<div class="class-name">
						<label>Course:</label><span>${courseName}</span>
					</div>
				</td>
				<td width="95">
					<span t:type="rating" t:id="ratingCourse" delegate="courseRatingDelegate" value="survey.courseScore" editable="true"/>
				</td>
			</tr>
			<tr>
				<td><div class="book"><img src="${contextPath}/img/ico-tutor-b.png" alt="" width="46" height="50"/></div></td>
				<td>
					<t:loop  source="tutorRoles" value="tutorRole" formState="none">
						<label>Tutor:</label><div class="tutor-list">${tutorRoleName} </div>
					</t:loop>
				</td>
				<td width="95">
					<span t:type="rating" t:id="ratingTutor" delegate="tutorRatingDelegate" value="survey.tutorScore" editable="true"/>
				</td>
			</tr>
			<tr>
				<td><div class="book"><img src="${contextPath}/img/ico-venue-b.png" alt="" width="46" height="50"/></div></td>
				<td>
					<label>Venue:</label><div class="venue-list">${room}</div>
				</td>
				<td width="95">
					<span t:type="rating" t:id="ratingVenue" delegate="venueRatingDelegate" value="survey.venueScore" editable="true"/>
				</td>
			</tr>
			<tr>
				<td colspan="10" rowspan="3">
					<p>Thank you for enrolling in ${courseName}. Your feedback on your experience will help us to ensure we deliver the highest quality training.</p>
					<label for="surveyComment" class="comment-label">Your comment</label>
					<div class="comment-box">
						<input t:type="textarea" id="surveyComment" cols="1" rows="5" value="survey.comment"/>
					</div>
				</td>
			</tr>

		</table>
		<button type="submit" class="form-submit-button btn">Submit</button>
	</t:form>
</html>