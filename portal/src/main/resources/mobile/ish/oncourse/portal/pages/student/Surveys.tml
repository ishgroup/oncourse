<html t:type="pagestructure" title="literal:Class"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">
	
	<div class="class-info-title">
		<a href="#" class="back-class">Classes</a>
		<span>${courseClass.course.name}</span>
		<div class="clear"></div>
		<span t:type="classTabs" courseClass="courseClass" selected="literal:classSurvey"/>
	</div>
	
    <div class="avg-rankings">
		<h5>Average ( <span>${totalRank} rankings</span> )</h5>
		<ul class="raging-info">
			<li>
				<span>
					<i class="icon-user icon-white"></i>
					<t:loop  source="tutorRoles" value="tutorRole" formState="none">
						${tutorRoleName}
					</t:loop>
				</span>
				<font>
					<span t:type="rating" t:id="ratingTutor" delegate="tutorRatingDelegate" value="survey.tutorScore"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-file icon-white"></i>${courseName}
				</span>
				<font>
					<span t:type="rating" t:id="ratingCourse" delegate="courseRatingDelegate" value="survey.courseScore"/>
				</font>
			</li>
			<li>
				<span>
					<i class="icon-home icon-white"></i>${room}
				</span>
				<font>
					<span t:type="rating" t:id="ratingVenue" delegate="venueRatingDelegate" value="survey.venueScore"/>
				</font>
			</li>
		</ul>
	</div>
	<div class="survey-content">
	
		<t:loop  source="surveyComment" value="surveyComment" formState="none">
			<div class="single-survey">
				<div class="survey-info">
					<span><i class="icon-user"></i>${tutor.rate}</span>
					<span><i class="icon-file"></i>${course.rate}</span>
					<span><i class="icon-home"></i>${venue.rate}</span>
				</div>
				<p>${comment}</p>
			</div>
		</t:loop>

	</div>
</html>