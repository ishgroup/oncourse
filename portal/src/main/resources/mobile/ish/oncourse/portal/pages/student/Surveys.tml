<html t:type="pagestructure" title="literal:Class"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">

	<div class="class-info-title">
		<a href="#" class="back-class">Classes</a>
		<span>${courseClass.course.name}</span>
		<div class="clear"></div>
	</div>

	<h1>${courseClass.course.name}</h1>

	<t:form t:id="surveyForm">
		<t:errors/>
		<table width="100%" border="0" cellspacing="0" cellpadding="0" class="survey-table">
			<tr>
				<td width="64"><div class="book"><img src="${contextPath}/img/ico-course-b.png" alt="" /></div></td>
				<td>

					<div class="class-name">
						<label>Course:</label><span>${courseName}</span>
					</div>
				</td>
				<td>
					<span t:type="rating" t:id="ratingCourse" delegate="courseRatingDelegate" value="survey.courseScore"/>
				</td>
			</tr>
			<tr>
				<td width="64"><div class="book"><img src="${contextPath}/img/ico-tutor-b.png" alt="" width="46" height="50"/></div></td>
				<td>
					<t:loop  source="tutorRoles" value="tutorRole" formState="none">
						<label>Tutor:</label><div>${tutorRoleName} </div>
					</t:loop>
				</td>
				<td>
					<span t:type="rating" t:id="ratingTutor" delegate="tutorRatingDelegate" value="survey.tutorScore"/>
				</td>
			</tr>
			<tr>
				<td width="64"><div class="book"><img src="${contextPath}/img/ico-venue-b.png" alt="" width="46" height="50"/></div></td>
				<td>
					<label>Venue:</label><div class="light">${room}</div>
				</td>
				<td>
					<span t:type="rating" t:id="ratingVenue" delegate="venueRatingDelegate" value="survey.venueScore"/>
				</td>
			</tr>
			<tr>
				<td colspan="10" rowspan="3">
					<p>Thank you for enrolling in ${courseName}. Your feedback on your experience will help us to ensure we deliver the highest quality training.</p>
					<label for="surveyComment">Your comment</label>
					<input t:type="textarea" id="surveyComment" cols="1" rows="5" value="survey.comment"/>
				</td>
			</tr>

		</table>
		<button type="submit" class="form-submit-button btn">Submit</button>
	</t:form>
</html>