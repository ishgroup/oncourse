<html t:type="pagestructure" title="literal:Profile page" bodyClass="literal:login-wrapper"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter" activeMenu="literal:m_profile">
	
		<div class="content">
			<h1>Profile</h1>
	
			<div class="profile">
			
				<t:form t:id="profileForm">
				
					<div class="form-row">
						<label for="email">Email</label>
						<t:TextField value="contact.emailAddress" t:id="email" t:validate="required,minlength=3" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="street">Street</label>
						<t:TextField value="contact.street" t:id="street" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="suburb">Suburb</label>
						<t:TextField value="contact.suburb" t:id="suburb" type="text" maxlength="200" class="input" />
					</div>
					<div class="form-row">
						<label for="postcode">Postcode</label>
						<t:TextField value="contact.postcode" t:id="postcode" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="state">State</label>
						<t:TextField value="contact.state" t:id="state" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="homePhone">Home Phone</label>
						<t:TextField value="contact.homePhoneNumber" t:id="homePhone" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="mobilePhone">Mobile Phone</label>
						<t:TextField value="contact.mobilePhoneNumber" t:id="mobilePhone" type="text" maxlength="200" class="input"/>
					</div>
					<div class="form-row">
						<label for="businessPhone">Work Phone</label>
						<t:TextField value="contact.businessPhoneNumber" t:id="businessPhone" type="text" maxlength="300" class="input"/>
					</div>
					<div class="form-row">
						<label for="fax">Fax</label>
						<t:TextField value="contact.faxNumber" t:id="fax" type="text" maxlength="300" class="input"/>
					</div>
					
					<div class="form-row">
						<label for="password">Password</label>
						<t:passwordfield name="password" t:id="password" maxlength="200" class="input"/> 
					</div>
					<div class="form-row">
						<label for="confirmpassword">Confirm password</label>
						<t:passwordfield name="confirmpassword" t:id="confirmpassword" maxlength="200" class="input" />
					</div>
					
					<div class="form-row">
						<label for="birthDate">Date of birth</label>
						<t:TextField value="birthDateProperty" t:id="birthDate" t:validate="required" type="text" maxlength="300" class="input"/>
					</div>
					<div class="form-row">
						<label>Gender</label><br/>
						<t:radiogroup t:value="contact.isMale"> 
							<input type="radio" t:type="radio" t:value="true"/><label for="male"> Male </label>
							<input type="radio" t:type="radio" t:value="false"/><label for="female"> Female </label>
						</t:radiogroup>
					</div>
					<div class="form-row">
						<label>I would like to receive marketing material via: </label> <br/>
					
						<t:checkbox t:id="allowEmail" value="contact.isMarketingViaEmailAllowed"/> <label for="allowEmail">E-Mail</label>
						<t:checkbox t:id="allowSms" value="contact.isMarketingViaSMSAllowed"/> <label for="allowSms">SMS</label>
						<t:checkbox t:id="allowPost" value="contact.isMarketingViaPostAllowed"/> <label for="allowPost">Post</label> 
					</div>
					
					
					<t:if test = "isStudent">
						<t:if test = "contact.college.requiresAvetmiss">
							<div class="form-row">
								<label for="countryOfBirth">Country of Birth</label>
								<t:TextField value="countryOfBirthName" t:id="countryOfBirth" type="text" maxlength="300" class="input"/>
							</div>
							<div class="form-row">
								<label for="indigenous">Indigenous Status</label> <br/>
								<t:select value="contact.student.indigenousStatus" model="indigenousStatusSelectModel" clientId="indigenous" blankOption="NEVER"/>
							</div>
							<div class="form-row">
								<label for="englishproficiency">Proficiency spoken English</label> <br/>
								<t:select value="contact.student.englishProficiency" model="englishProficiencySelectModel" clientId="englishproficiency" blankOption="NEVER"/>
							</div>
							<div class="form-row">
								<label for="languageHome">Language spoken at home?</label>
								<t:TextField value="languageHomeName" t:id="languageHome" type="text" maxlength="300" class="input" />
							</div>
							<div class="form-row">
								<label for="prioreducation">Prior Education Achievement</label> <br/>
								<t:select value="contact.student.priorEducationCode" model="priorEducationSelectModel" clientId="prioreducation" blankOption="NEVER"/>
							</div>
							<div class="form-row">
								<label for="schoollevel">Highest school level</label> <br/>
								<t:select value="contact.student.highestSchoolLevel" model="schoolLevelSelectModel" clientId="schoollevel" blankOption="NEVER"/>
							</div>
							<div class="form-row">
								<label for="schoolYear">School Year</label>
								<t:TextField value="schoolYearStr" t:id="schoolYear" type="text" maxlength="300" class="input"/>
							</div>
							
							<div class="form-row">
								<label>Disability type </label><br/>
								<t:radiogroup t:value="hasDisability"> 
										<input type="radio" t:type="radio" t:value="true"/> Yes 
										<input type="radio" t:type="radio" t:value="false"/> No 
								</t:radiogroup>
							</div>
						</t:if>
					</t:if>
			
					<t:submit  t:id="saveProfileAction" value="Save" class="btn" clientId="save-student-profile"/> 
					<br/><br/><br/><br/><br/>
				</t:form>
			</div>
		</div>
	
</html>