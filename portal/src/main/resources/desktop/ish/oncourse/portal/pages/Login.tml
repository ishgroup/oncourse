<html t:type="pagestructure" title="literal:Login page"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<div class="col-xs-12 col-sm-12 col-lg-12">
	<div class="login-form well">


        <t:form t:id="loginForm" method="post" clientValidation="literal:NONE">
            <t:errors banner="literal:Please correct the following mistakes:" class="literal:validation alert alert-block alert-error"/>
            <fieldset><h2 class="form-title">Log In</h2>

				<div class="login-option clearfix form-group">
					<div class="slider-frame"><label class="slider-button ${companyCheckStyle.companyOn}" for="chk_company">${companyCheckStyle.label}</label>
						<t:checkbox t:id="iscompany" value="iscompany" clientId="chk_company" name="chk_company"/></div>
				</div>
				<div class="company-login" style="${companyCheckStyle.companyDisplay}">
					<div class="form-group"><t:textField t:id="companyName" class="form-control" placeholder="Company Name"/></div>
                    <span t:type="HintComponent" validationMessage="${getValidationMessage('companyName')}"/>
				</div>

				<div class="user-login"  style="${companyCheckStyle.studentDisplay}">
					<div class="form-group">
                        <t:textField t:id="firstName" class="form-control" placeholder="First Name"/>
                        <span t:type="HintComponent" validationMessage="${getValidationMessage('firstName')}"/>
                    </div>
					<div class="form-group">
                        <t:textField t:id="lastName" class="form-control" placeholder="Last Name"/>
                        <span t:type="HintComponent" validationMessage="${getValidationMessage('lastName')}"/>
                    </div>
				</div>


				<div class="form-group">
                    <t:textField t:id="email" class="form-control" placeholder="Email"/>
                    <span t:type="HintComponent" validationMessage="${getValidationMessage('email')}"/>
                </div>
				<div class="form-group">
                    <t:passwordField t:id="password" class="form-control" placeholder="Password"/>
                    <span t:type="HintComponent" validationMessage="${getValidationMessage('password')}"/>
                </div>
				<div class="row">
					<div class="col-lg-12">
						<div id="forgotPassword" class="forget-pwd" ><a href="#">Forgot Password?</a></div>
						<div class="text-right">
							<t:submit t:id="signIn" class="btn-login btn btn-primary" value="Submit"/>
						</div>
					</div>
				</div>
			</fieldset>
		</t:form>
		<div class="alert alert-info"><p>If you are a tutor or a student login to SkillsOnCourse to manage your
			classes, view your timetable and much more. If you are looking to enrol in a class please visit the
			college website directly.</p></div>
	</div>
</div>
</html>

