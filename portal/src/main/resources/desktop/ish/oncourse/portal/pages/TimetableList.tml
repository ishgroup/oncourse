<html t:type="pagestructure" title="literal:Timetable List"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter" activeMenu="literal:m_timetable">
	
	<h1>Timetable</h1>
	
	<div class="tabs">
		<t:pagelink id="timetableMonth" page="prop:monthPageName"><img src="${contextPath}/img/tabs-arrow.gif" alt="" /><span>Month</span></t:pagelink>
		<t:pagelink id="timetableList" page="prop:listPageName" class="act"><img src="${contextPath}/img/tabs-arrow.gif" alt="" /><span>List</span></t:pagelink>
	</div>
	
	<div class="timetableList" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" >
		<t:if test="hassessions">
			<t:loop source="sessionsByDate" value="currentBucket">
					<table width="100%" border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td width="70">
								<div class="${dayClass}">
									<div class="date-day">
										<span>${day}</span> ${month}
										<t:if test="today">
											<i>today</i>
										</t:if>
									</div>
								</div></td>
							<td>
								<div class="timetable">
									<t:loop source="currentBucket.value" value="session">
										<div class="timetable-item">
											<div class="timetable-name">
												${time}. <t:pagelink page="class" context="session.courseClass.id">${name}.</t:pagelink>
											</div>
											<t:if test="hasRoomAndSite">
												<i class="icon-map-marker"></i><div class="class-place">${session.room.site.name}</div>
											</t:if>
											<t:if test="tutors.empty" negate="true">
												<t:loop source="tutors" value="tutor">
													<i class="icon-user"></i><div class="class-man">${tutor.fullName}</div>
												</t:loop>
											</t:if>
										</div>
									</t:loop>
								</div></td>
						</tr>
					</table>
					<div class="bord mb10"></div>
				</t:loop>
			<p:else>
				You have no currently scheduled classes.
			</p:else>
		</t:if>
			
	</div>
	
</html>
	


