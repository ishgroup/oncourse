<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<div class="tab-pane active" id="class-details">
<div class="course-detail">
    <p class="class-detail">${courseClass.course.detail}<strong></strong></p>
    <p class="clearfix"><a href="#" class="pull-right show-full-description"><span class="icon-arrow-down"></span> <span class="text">Show all</span></a></p>
</div>

<div class="row">
    <span t:type="courseclass/sessionSlider" courseClass="courseClass"></span>
</div>

<t:if test="tutor">
    <div class="row">
        <span t:type="courseclass/classroll" courseClass="courseClass"></span>
    </div>
</t:if>
</div>
</t:container>