<html t:type="pagestructure" title="literal:Password Recovery"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<t:if test="isExpired" negate="true">
		<t:form t:id="recoveryForm" class="recovery-form">
			<t:errors />
			<table class="login-table">
				<tr>
					<td><t:label for="password">New Password</t:label>
					</td>
					<td><input t:type="PasswordField" t:id="password" size="30"
						maxlength="100" />
					</td>
				</tr>
				<tr>
					<td><t:label for="password">Confirm Password</t:label>
					</td>
					<td><input t:type="PasswordField" t:id="confirmpassword"
						size="30" maxlength="100" />
					</td>
				</tr>
				<tr>
					<td></td>
					<td><input t:id="resetPassword" t:type="submit" class="btn-login" value="Reset Password" />
					</td>
				</tr>
			</table>
		</t:form>
		<p:else>
			<b>Link expired. Please, fill re-enter your details <t:pagelink page="login">here</t:pagelink>.</b>
		</p:else>
	</t:if>
</html>