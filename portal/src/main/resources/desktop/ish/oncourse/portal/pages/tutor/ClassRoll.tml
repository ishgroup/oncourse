<html t:type="pagestructure" title="literal:Student Timetable"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">

<t:if test="courseClass">
    <h1>${courseClass.course.name}</h1>
	
	<span t:type="classTabs" courseClass="courseClass" selected="literal:classroll"/>

    <div class="classes-classroll">
        <div class="day-head">
            <div id="prevSession">
                <a href="#" id="prevButton" class="prev-session">Previous session</a>
            </div>
            <div id='classes_inner'>
                <ul id='classes_ul'>
                    <t:loop source="sessions" value="currentSession">
						<li id="effect_date" class="date1 ${nearestClass}">
							<div class="date-day">
								<span>${day}</span> ${month}
								<t:if test="today">
									<i>today</i>
								</t:if>
							</div>
							${sessionIntervalInfo}
							<span>${roomName}</span>
						 </li>
                    </t:loop>
                </ul>
            </div>
            <div id="nextSession">
                <a href="#" id="nextButton" class="next-session">Next session</a>
            </div>
        </div>

		<div id="effect_attendance" class="mark">
			<h3>Mark attendance for this session</h3>
 				<div id='classes_for_attendance'>  
		            <ul id='classes_ul_for_attendance'>  
		            	<t:loop source="sessions" value="currentSession">
		              	  <li id="effect_date" class="date1">
							<t:loop source="currentSession.attendances" value="attendance" >
								<div class="mark-item">
									<div class="mark-yn">
										<a href="javascript:void(0);" value="${attended}" class="mark-y attended btn" id="attended_${attendance.angelId}" date-attendanceId="${attendance.angelId}"><i class="icon-ok"></i></a>
										<a href="javascript:void(0);" value="${absent}" class="mark-n absent btn" id="absent_${attendance.angelId}" date-attendanceId="${attendance.angelId}"><i class=" icon-remove"></i></a> 
										
										<t:actionLink href="#" t:id="attendance" style="display: none;"/>
									</div>
									<div>${attendance.student.contact.givenName} ${attendance.student.contact.familyName}</div>
									<t:if test="hideDetails" negate="true">
										<span>Enrolled on: ${enrolmentDate}</span>
										<span>Phone: ${attendance.student.contact.homePhoneNumber}</span>
										<span>E-mail: <a href="mailto:${attendance.student.contact.emailAddress}">${attendance.student.contact.emailAddress}</a></span>
									</t:if>
									
									<div class="mark-yn" style="left:500px;">${studentRatio}</div>
								</div>
							</t:loop>
		               	 </li>  
		                </t:loop>
		            </ul>  
      			</div>  
			 
		</div>

		<div class="bord mb15"></div>

		<div class="enrolment">
			<i class="icon-user"></i><strong>${enrolmentsCount}</strong> enrolments | <strong>${availableEnrolmentPlaces}</strong> places available
		</div>
	</div>
</t:if>
</html>
