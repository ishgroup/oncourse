<html t:type="pagestructure" title="literal:Class"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter" activeMenu="literal:m_classes">
	
	<h1>${courseClass.course.name}</h1>
	
	<span t:type="classTabs" courseClass="courseClass" selected="literal:classDetails"/>
	
	<div class="class-details">
		<t:outputraw value="details"/>
		<t:if test="hidden" negate="true">
			<br/>
			<strong><a href="${classDetailsLink}" target="_blank">See full class description</a></strong>
			
			<p:else>
				<br/><br/>
				<p><strong>The details of this class have been hidden by the college. Please contact them for more details.</strong></p>
			</p:else>
		</t:if>
	</div>

</html>