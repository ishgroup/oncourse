<html t:type="pagestructure" title="literal:Class"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">


    <div class="col-lg-9 col-sm-9 main-container">
        <t:if test="tutor">
            <p class="info-text fixed">This course requires approval <a href="#" class="btn btn-default btn-xs">Review now</a></p>
        </t:if>
        <div class="page-header zero-padding clearfix">
                <ul class="nav nav-tabs header-tabs">
                    <span t:type="courseclass/classTabs" courseClass="courseClass"/>
                </ul>
                <h3><a href="#" name="top">${courseClass.course.name}</a> <small>(${courseClass.code})</small></h3>
        </div>
        <div class="tab-content">
            <span t:type="courseclass/classDetails" courseClass="courseClass"></span>
            <span t:type="courseclass/classLocation" courseClass="courseClass" ></span>
            <span t:type="courseclass/classResources" courseClass="courseClass"></span>
            <span t:type="courseclass/classResults" courseClass="courseClass"></span>


        </div>
    </div>
</html>