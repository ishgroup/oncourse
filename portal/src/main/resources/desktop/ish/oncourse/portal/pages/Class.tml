<html t:type="pagestructure" title="literal:Class"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" activeMenu="literal:m_classes">
	
	<h1>${courseClass.course.name}</h1>
	
	<span t:type="classTabs" courseClass="courseClass" selected="literal:classInfo"/>
   
    <table class="class-info-table">
		<tr>
			<td>
				<div t:type="nextsession" courseClass="courseClass"/>
				<div t:type="classinformation" courseClass="courseClass"/>
			</td>
		</tr>
	</table>

	<div class="bord mb15"></div>


	<h2>Materials</h2>
	<table class="class-info-materials mb20">
		<tr>
			<td>
				<div t:type="materials" courseClass="courseClass"/>
			</td>
		</tr>
	</table>

	<div class="bord mb15"></div>

	<h2>Messages</h2>

	<div t:type="messages" courseClass="courseClass"/>

	<div class="cl mb20"></div>
	<div class="cl"></div>
</html>