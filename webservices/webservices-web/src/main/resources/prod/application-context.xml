
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	 <!-- Spring beans -->
	<bean id="referenceService" class="ish.oncourse.webservices.soap.ReferenceService" />

	 <!-- JAX-RS -->
	<jaxrs:server id="referenceService" address="/">
		<jaxrs:serviceBeans>
			<ref bean="referenceService" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	 <!-- JAX-WS -->
	<jaxws:endpoint
        id="reference"
        implementor="#referenceService"
        address="/reference">
	</jaxws:endpoint>

	<jaxws:endpoint
        id="doubleit"
        implementor="ish.oncourse.webservices.soap.DoubleItPortTypeImpl"
        address="/doubleIt">
	</jaxws:endpoint>

</beans>