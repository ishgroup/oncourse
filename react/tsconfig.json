{
  "compilerOptions": {
    "rootDirs": [
      "src/js",
      "src/dev",
      "src/test"
    ],
    "outDir": "build/ts",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "module": "es6",
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "build/resources"
  ]
}
