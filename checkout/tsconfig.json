{
  "compilerOptions": {
    "rootDirs": [
      "src/js",
      "src/dev",
      "src/test"
    ],
    "outDir": "build/ts",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "module": "esnext",
    "skipLibCheck": true,
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "es5",
      "es6",
      "es7"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "./node_modules*",
    "./build/resources*",
    "out"
  ]
}
