<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" monitorInterval="30">
    <Properties>
        <Property name="name">enrol</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>[%d{dd/MMM/yyyy:HH:mm:ss}] %t %x %-5p %c{1}: %m%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="FILE" fileName="${sys:catalina.base}/logs/${name}.log" filePattern="${sys:catalina.base}/logs/${name}.log.%i">
            <PatternLayout>
                <Pattern>[%d{dd/MMM/yyyy:HH:mm:ss}] %t %x %-5p %c{1}: %m%n</Pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="10M"/>
            <DefaultRolloverStrategy/>
        </RollingFile>
        <RollingFile name="FILE_ERROR" fileName="${sys:catalina.base}/logs/${name}-error.log" filePattern="${sys:catalina.base}/logs/${name}-error.log.%i">
            <PatternLayout>
                <Pattern>[%d{dd/MMM/yyyy:HH:mm:ss}] %t %x %-5p %c{1}: %m%n</Pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="10M"/>
            <DefaultRolloverStrategy/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="FILE_ERROR" level="error"/>
            <AppenderRef ref="FILE" level="info"/>
        </Root>
    </Loggers>
</Configuration>
