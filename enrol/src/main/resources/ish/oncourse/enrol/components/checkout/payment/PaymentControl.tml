<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
    <p>
        <div>
            <label>Conditions<em title="${message:message-required}">*</em></label>
        </div>
        <div class="conditions">
					<span class="${validateHandler.validateClass('userAgreed')}">
						<t:checkbox value="userAgreed" t:id="userAgreed" class="${validateHandler.errorClass('userAgreed')}"/>
						<div class="conditions-text ${validateHandler.errorClass('userAgreed')}">
                            <t:if test="enrolmentDisclosure">
                                I have read the <a class="nyromodal" title="Student information" href="${enrolmentDisclosure}?wrap=false">Student Information</a> or have had it explained to me, and I agree to accept these enrolment conditions.
                            </t:if>
							<t:if test="hasRefundPolicyUrl">
								I understand the <a href="${refundPolicyUrl}" target="_blank">enrolment and refund policy</a>.
								<p:else>
									I understand the enrolment and refund policy.
								</p:else>
							</t:if>
						</div>
						<span t:type="ui/HintComponent" validationMessage="${validateHandler.error('userAgreed')}"/>
					</span>
        </div>
    </p>
    <div class="form-controls enrolmentsSelected">
        <t:submit t:id="paymentSubmit" value="${submitButtonText}" class="btn btn-primary"/>
    </div>
</t:container>