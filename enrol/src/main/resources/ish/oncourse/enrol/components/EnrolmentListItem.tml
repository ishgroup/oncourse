<t:container
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter">
	
	<tr> 
		<td colspan="2">
			<form>
				<label id="i_${studentIndex}_${courseClassIndex}">
					<input type="checkbox" id="enrolmentCheckbox_${studentIndex}_${courseClassIndex}" class="enrolmentCheckbox"/>
					<t:if test="enrolmentSelected"><script type="text/javascript">document.getElementById('enrolmentCheckbox_${studentIndex}_${courseClassIndex}').checked=true;</script></t:if>
					<t:if test="disabled"><script type="text/javascript">document.getElementById('enrolmentCheckbox_${studentIndex}_${courseClassIndex}').disabled=true;</script></t:if>
					${courseClass.course.name}
	  			</label>
	  		</form>
	  			
	  		<t:if test="disabled">
	  			<span class="disabled">(${disabledMessage})</span>
	  		</t:if>
	  		<t:if test="commenced">
	  			<span>(Note: This class has already commenced)</span>
	  		</t:if>
			<br/>
	  		<em>
	  			<t:if test="courseClass.hasRoom">
	  				<span t:type="ui/RoomLocation" room="courseClass.room" withRoomName="false" disabledLink="true" />
				</t:if>&#187; 
		  		<t:if test="courseClass.running">
		  			<span class="started">
	  					<t:output value="courseClass.startDate" format="dateFormat"/>
	  				</span>
					<p:else>
						<span class="ended">
	  						<t:output value="courseClass.startDate" format="dateFormat"/>
		  				</span>
		  			</p:else>
	  			</t:if>
	 	  	</em>
		</td>
		<td class="alignright">
			<span t:type="EnrolmentPrice" enrolment="enrolment" courseClass="courseClass" index="${studentIndex}_${courseClassIndex}"/>
		</td>
	</tr>
 
</t:container>	