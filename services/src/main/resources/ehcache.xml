<?xml version="1.0" encoding="UTF-8"?>
<ehcache
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
        updateCheck="false" name="services">
        <!-- disable the cache completely for the services application. We always want fresh data -->
    <defaultCache
            maxElementsInMemory="0"
            eternal="false"
            timeToLiveSeconds="0"
            overflowToDisk="false">
    </defaultCache>
</ehcache>