<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" lang="en">

	<t:zone t:id="portalSettingsZone" t:update="show">
		<t:form t:id="portalSettingsForm" t:zone="portalSettingsZone">
		
			<t:if test="saved">
				<script>
					setTimeout(function() {
						jQuery("#portal-settings-saved").hide();
					}, 5000);
				</script>
				<div id="portal-settings-saved">
					<h3>Saved.</h3>
				</div>
			</t:if>
		
			<div class="cms-set-ops">
                <label class="checkbox">
				<t:checkbox t:id="hideDetailsCheckbox"
					value="hideDetails" /> Hide student contact details from tutor.
                    </label>

			</div>
			<br/>
			<div class="cms-set-ops form-inline">
			<label>Email tutor feedback to</label>
                <t:textfield t:id="feedbackEmailCheckbox" class="span3"
					value="feedbackEmail" />
			</div>
			
			<div class="cms-btns">
		 		<t:submit t:id="save" value="Save" class="btn btn-success cms-settings-button"/>
		 	</div>
		</t:form>
	</t:zone>
	
	<script type="text/javascript">
		Event.observe('${portalSettingsZone.clientId}', Tapestry.ZONE_UPDATED_EVENT, customForms);
	</script>
	
</t:container>