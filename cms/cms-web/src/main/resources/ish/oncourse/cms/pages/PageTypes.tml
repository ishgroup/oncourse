<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" lang="en">
	
	<button>New Page Type</button> <br/>
	
	<h2>Page Types</h2>
	
	<table id="pageTypes">
		<t:loop source="webNodeService.webNodeTypes" value="webNodeType">
			<tr>
				<td>${webNodeType.name}</td> 
				<td><t:outputraw value="lastEdited"/></td>
			</tr>
		</t:loop>
	</table>
	
	<script type="text/javascript">
			jQuery('#pageTypes tbody tr').mouseover(function() {
				jQuery(this).addClass('selectedRow');
			}).mouseout(function() {
			    jQuery(this).removeClass('selectedRow');
			}).click(function() {
			     alert(jQuery('td:first', this).text());
		    });
		});
	</script>
	
	<style>
		.selectedRow {
			background-color: yellow;
			cursor: pointer;
		 }
	</style>

</div>