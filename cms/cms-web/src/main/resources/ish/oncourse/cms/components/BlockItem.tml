<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter" lang="en" >
	
	<tr id="block_row_${block.id}">
		<td class="cms-first">${block.name}</td>
		<td class="cms-block-last-upd"><t:outputraw value="lastEdited"/></td>
		<td>
			<span class="cms-ico-edit"></span> 
			<a href="#" t:type="actionLink" t:id="editBlock" t:zone="blockZone" t:context="${block.id}">Edit</a>
		</td>
		<td class="cms-last">
			<t:if test="isUsedInPages" negate="true">
				<span class="cms-ico-del"></span>
				<a onclick="showDeleteBlockConfirmation(${block.id});">Delete</a>
				<div id="deleteBlockModal${block.id}" style="display:none;">
					<p>Are you sure you wish to delete this item?</p>
					<a id="dBlock_${block.id}" onclick="fireDeleteBlock(this.id);"></a>
					<t:actionLink t:id="deleteBlock" clientId="deleteBlock${block.id}" context="${block.id}" zone="blockZone"></t:actionLink>
				</div>
			</t:if>
		</td>
	</tr>
</t:container>