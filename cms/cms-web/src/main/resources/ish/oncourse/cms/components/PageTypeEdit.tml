<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<t:form t:id="pageTypeEditForm" zone="pageTypeZone">
		<t:errors/>	
		<t:label for="name"></t:label><t:textfield t:id="name" t:value="editPageType.name" t:validate="required,minlength=3"/><br/>
		<t:label for="layoutKey"></t:label><t:select t:id="layoutKey" name="layoutKey" model="layoutSelectModel" encoder="layoutSelectModel" t:validate="required" value="editPageType.layoutKey"/>
	
	
	<br/>
		
	<t:loop source="regionKeys" value="regionKey">
		<h2>${regionKey}</h2>
		<ul id="b_${regionKey}" class="connectedSortable">
			<t:loop source="blocksForRegionKey" value="block" formState="none">
				<li id="${block.id}" class="ui-state-default">${block.name}</li>
			</t:loop>
			<span>&nbsp;</span>
		</ul>		
		<br/>
	</t:loop>
		
	<div>
		<t:submit t:id="cancel" value="Cancel" mode="CANCEL"/>
		<t:submit t:id="delete" value="Delete" mode="CANCEL"/>
		<t:submit t:id="save" value="Save"/>
	</div>
	</t:form>
	<script type="text/javascript">
			jQuery(function() {
				jQuery.pageTypeEditor('${blockIds}');
			});
	</script>
</div>