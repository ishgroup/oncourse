<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<div class="cms-page-controls" id="edControls">
		<div class="cms-page-controls-wr clearFix">

        	<div class="cms-btn-control">
         	   <div class="cms-btn-control-in">
         	       <a href="" class="cms-page-opt">Page options</a>
          	  </div>
        	</div>
        	<div class="cms-pane-wide">
            	<div class="cms-pane-content">
					<span t:type="pageoptions" node="prop:node" updateZones="zonesForUpdate"/>
				 </div>
			</div>

	        <div class="cms-btn-control">
    	        <div class="cms-btn-control-in">
        	       <a href="#" class="cms-add-item">Add new page</a>
            	</div>
	        </div>
    	    <div class="cms-pane-wide">
        	    <div class="cms-pane-content">
            	     <span t:type="pageoptions" node="newPageNode"/>
	            </div>

    	    </div>

        	<div class="cms-btn-control">
            	<div class="cms-btn-control-in">
                	<span>Current page:</span>
	                <a href="" class="cms-select-item">${node.name}</a>
    	        </div>
        	    <div class="cms-pane-small">
            	    <div class="cms-pane-content">

                	    <div class="cms-pane-small-head clearFix">
                    	    <div class="cms-pane-small-title">Quick jump</div>
                        	<span class="cms-ico-close cms-close-pane"></span>
	                    </div>

    	                <div id="scrollbar1">
        	                <div class="scrollbar">
            	                <div class="track">
                	                <div class="thumb">
                    	                <div class="end"></div>
                        	        </div>
                            	</div>
	                        </div>
    	                    <div class="viewport">
        	                    <div class="overview">
	                                <ul class="cms-list-pages">
	                                	<t:loop source="webNodeService.nodes" value="webNode">
											<li>
												<div data-status="${statusForNode}">
											 		<a href="${webNode.path}">${webNode.name}</a> 
											 		&mdash; 
											 		<t:if t:test="webNode.published"> 
											 			<span data-pub="published">published</span>
												 		<p:else> 
												 			<span data-pub="hidden">unpublished</span>
												 		</p:else>
												 	</t:if>
												 </div>	
											</li>
										</t:loop>
                               		</ul>

                            	</div>
                        	</div>
                    	</div>
                	</div>
            	</div>
        	</div>

	   		<div class="cms-pages-status" data-pub="published">
       			<t:zone t:id="publishedZone" update="show" show="show">
            		<t:if t:test="webNode.published"> 
						<span data-pub="published">${pageStatus}</span>
						<p:else> 
							<span data-pub="hidden">${pageStatus}</span>
						</p:else>
					</t:if>
            	</t:zone>
        	</div>

		
        	<div class="cms-pages-updated">
	          	<t:zone t:id="updatedZone" update="show" show="show">
    	       		${lastEdited}
        	    </t:zone>
	        </div>

    	    <div class="cms-editable-show">
        	    Show editable areas
            	<div class="cms-editable-control"><input type="checkbox" id="showEdit" class="cms-onoff" /></div>
	        </div>


    	</div>
	
	</div>

</t:container>