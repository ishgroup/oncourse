<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>cms</artifactId>
		<groupId>ish.oncourse.willow.cms</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>cms-web</artifactId>
	<packaging>war</packaging>
	<name>Willow - CMS Web App</name>
	<description>onCourse Willow Content Management System for managing college specific online content.</description>

	<dependencies>

		<dependency>
			<groupId>ish.oncourse.willow.frameworks</groupId>
			<artifactId>common-model</artifactId>
		</dependency>

		<dependency>
			<groupId>ish.oncourse.willow.frameworks</groupId>
			<artifactId>common-ui</artifactId>
		</dependency>

		<dependency>
			<groupId>ish.oncourse.willow.cms</groupId>
			<artifactId>cms-services</artifactId>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>
	
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.tapestry</groupId>
			<artifactId>tapestry-upload</artifactId>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<!-- Activate explicitly in Eclipse -->
			<id>eclipse</id>
			<dependencies>
				<dependency>
					<groupId>ish.oncourse</groupId>
					<artifactId>jetty-launcher</artifactId>
					<version>${version}</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<build>
		<finalName>cms</finalName>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>7.0.1.v20091125</version>
				<configuration>
					<stopPort>9969</stopPort>
					<stopKey>foo</stopKey>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.eclipse.jetty</groupId>
						<artifactId>jetty-plus</artifactId>
						<version>7.0.0.v20091005</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<properties>
		<netbeans.hint.deploy.server>Tomcat60</netbeans.hint.deploy.server>
	</properties>

</project>
