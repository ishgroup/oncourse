<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
		lang="en">

	<t:zone t:id="settingsZone" t:update="show">

		<t:form t:id="settingsForm" t:zone="settingsZone">
		
			<t:if test="saved">
				<script>
					setTimeout(function() {
						jQuery("#contact-settings-saved").hide();
					}, 5000);
				</script>
				<div id="contact-settings-saved">
					<h3>Saved.</h3>
				</div>
			</t:if>
		
			<div class="cms-set-container">
				<div class="cms-set-name"></div>

				<div class="cms-set-col">
					<h5 class="cms-block-sub-title">Enrolment</h5>
				</div>
			
				<div class="cms-set-col">
					<h5 class="cms-block-sub-title">Waiting list</h5>
				</div>
			
				<div class="cms-set-col">
					<h5 class="cms-block-sub-title">Mailing list</h5>
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">First name</div>

				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
				
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
			
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Last name</div>

				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
				
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
				
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Email</div>

				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
			
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>
			
				<div class="cms-set-col">
					<span data-pub="hidden">Required</span>
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Address</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentAddressState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListAddressState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListAddressState" class="cms-span2" />
				</div>
			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Suburb</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentSuburbState" class="cms-span2" />
				</div>
			 
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListSuburbState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListSuburbState" class="cms-span2" />
				</div>
			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">State</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentStateState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListStateState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListStateState" class="cms-span2" />
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Postcode</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentPostcodeState" class="cms-span2" />
				</div>
				
			
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListPostcodeState" class="cms-span2" />
				</div>
			
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListPostcodeState" class="cms-span2" />
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Country</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
							  blankOption="never" value="enrolmentCountryState" class="cms-span2" />
				</div>


				<div class="cms-set-col">
					<t:select model="stateSelectModel"
							  blankOption="never" value="waitingListCountryState" class="cms-span2" />
				</div>


				<div class="cms-set-col">
					<t:select model="stateSelectModel"
							  blankOption="never" value="mailingListCountryState" class="cms-span2" />
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Home phone</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentHomePhoneState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListHomePhoneState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListHomePhoneState" class="cms-span2" />
				</div>
			</div>
			
			<div class="cms-set-container">
				<div class="cms-set-name">Business phone</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentBusinessPhoneState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListBusinessPhoneState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListBusinessPhoneState" class="cms-span2" />
				</div>
			</div>
			
			<div class="cms-set-container">
				<div class="cms-set-name">Fax</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentFaxState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListFaxState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListFaxState" class="cms-span2" />
				</div>
			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Mobile</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentMobileState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListMobileState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListMobileState" class="cms-span2" />
				</div>

			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Date of birth</div>

				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="enrolmentDateOfBirthState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="waitingListDateOfBirthState" class="cms-span2" />
				</div>
				
				<div class="cms-set-col">
					<t:select model="stateSelectModel"
						blankOption="never" value="mailingListDateOfBirthState" class="cms-span2" />
				</div>
			</div>

			<div class="cms-set-container">
				<div class="cms-set-name">Enrolment min age</div>

				<div class="cms-set-col">
					<t:textfield t:id="enrolmentMinAge" value="enrolmentMinAge" class="cms-span2"/>
				</div>

				<div class="cms-set-col"/>

				<div class="cms-set-col"/>
			</div>


			<div class="cms-set-opts">
                <label class="cms-checkbox">
                    <t:checkbox t:id="avetmissCheckbox" value="avetmissQuestionsEnabled" /> Enable AVETMISS optional questions
              </label>

			</div>

			<div class="cms-btns">
				<t:submit t:id="save" value="Save" class="cms-btn cms-btn-primary cms-settings-button"/>
			</div>
			
		</t:form>

	</t:zone>
	
	<script type="text/javascript">
		Event.observe('${settingsZone.clientId}', Tapestry.ZONE_UPDATED_EVENT, customForms);
	</script>
	
</t:container>