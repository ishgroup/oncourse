<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:form t:id="blockEditForm" zone="blockZone">
		<t:errors class="literal:cms-error-txt"/>
		<div class="cms-main-head">
			<div class="cms-main-title">
				<h1 class="cms-page-title">Edit Block</h1>
			</div>
		</div>
		<div class="cms-cols-pane">

			<div class="cms-colpane">

				<h5 class="cms-block-sub-title">
					Name <span class="cms-ico-help" title="The name of this block"/>
				</h5>
				<t:textfield t:id="name" value="editBlock.name" t:validate="required" class="cms-span4"/>

			</div>
			
				
		</div>

		<div class="cms-cols-pane">
			<div class="cms-colpane">

				<h5 class="cms-block-sub-title">
					Content <span class="cms-ico-help" title="The content of this block"/>
				</h5>
				<textarea t:type="TextArea" t:id="content" value="editBlock.contentTextile" rows="18"
				          class="cms-span10"/>

			</div>
		</div>
		
		<div class="cms-btns container-fluid">
            <div class="floatLeft">
                <t:submit t:id="delete" value="Delete" mode="CANCEL" class="cms-btn cms-btn-danger cms-btn-mini"/>
            </div>
            <div class="floatRight">
                <t:submit t:id="cancel" value="Cancel" mode="CANCEL" class="cms-btn"/>
            	<t:submit t:id="save" value="Save" class="cms-btn cms-btn-primary"/></div>
		</div>
	</t:form>
</div>