<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
			 lang="en">
	
	<tr id="theme_row_${webNodeType.id}">
		<td class="cms-first">${webNodeType.name}
			<t:if test="webNodeType.isDefaultPageTheme()">
				<small>(used for all special pages)</small>
			</t:if>
            <t:if test="webNodeType.isThemeUsedInPages()">
                <small>(used for pages)</small>
            </t:if>
        </td>
		<td class="cms-block-last-upd"><t:outputraw value="lastEdited"/></td>
		<td>
			<span class="cms-ico-edit"></span> 
			<a href="#" t:type="actionLink" t:id="editPageType" t:zone="pageTypeZone" t:context="${webNodeType.id}">Edit</a>
		</td>
		<td class="cms-last">
			<t:if test="canRemove()" negate="true">
				<span class="cms-ico-del"></span>
				<a onclick="showDeleteThemeConfirmation(${webNodeType.id});">Delete</a>
				<div id="deleteThemeModal${webNodeType.id}" style="display:none;">
					<p>Are you sure you wish to delete this item?</p>
					<a id="dTheme_${webNodeType.id}" onclick="fireDeleteTheme(this.id);"></a>
					<t:actionLink t:id="deletePageType" clientId="deleteTheme${webNodeType.id}" context="${webNodeType.id}" zone="pageTypeZone"></t:actionLink>
				</div>
			</t:if>
		</td>
	</tr>
</t:container>