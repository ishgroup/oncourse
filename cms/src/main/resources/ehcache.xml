<?xml version="1.0" encoding="UTF-8"?>
<ehcache
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
        updateCheck="false" name="cms">

    <!-- a short cache by default (for all the things edited in the CMS) -->
    <defaultCache
            maxEntriesLocalHeap="500"
            eternal="false"
            timeToLiveSeconds="120"
            overflowToDisk="false">
    </defaultCache>

    <cache name="CourseClass"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>
    <cache name="Course"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>
    <cache name="Tag"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>
    <cache name="Session"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>
    <cache name="CourseProductRelation"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>

</ehcache>