<?xml version="1.0" encoding="UTF-8"?>
<ehcache
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
        name="cms">

    <!-- a short cache by default (for all the things edited in the CMS) -->
    <defaultCache
            maxEntriesLocalHeap="10000"
            timeToLiveSeconds="120">
    </defaultCache>

    <cache name="CourseClass"
           maxEntriesLocalHeap="10000"
           timeToLiveSeconds="600">
    </cache>
    <cache name="Course"
           maxEntriesLocalHeap="10000"
           timeToLiveSeconds="600">
    </cache>
    <cache name="Tag"
           maxEntriesLocalHeap="10000"
           timeToLiveSeconds="600">
    </cache>
    <cache name="Session"
           maxEntriesLocalHeap="10000"
           timeToLiveSeconds="600">
    </cache>
    <cache name="CourseProductRelation"
           maxEntriesLocalHeap="10000"
           timeToLiveSeconds="600">
    </cache>
</ehcache>