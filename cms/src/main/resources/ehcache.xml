<?xml version="1.0" encoding="UTF-8"?>
<!-- see description in web/src/resources/ehcache.xml-->
<ehcache
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
        name="cms" maxBytesLocalHeap="40M">

    <!-- a short cache by default (for all the things edited in the CMS) -->
    <defaultCache timeToLiveSeconds="120"/>
    <cache name="CourseClass" timeToLiveSeconds="600"/>
    <cache name="Course" timeToLiveSeconds="600"/>
    <cache name="Tag" timeToLiveSeconds="600"/>
    <cache name="Session" timeToLiveSeconds="600"/>
    <cache name="CourseProductRelation" timeToLiveSeconds="600"/>
</ehcache>