<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="true"
         version="3.0">

	<display-name>oncourse-cms</display-name>

	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>ish.oncourse.cms</param-value>
	</context-param>
	
	<context-param>
		<param-name>applicationName</param-name>
		<param-value>cms</param-value>
	</context-param>

	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>MiltonFilter</filter-name>
		<filter-class>io.milton.servlet.MiltonFilter</filter-class>

		<init-param>
			<param-name>milton.configurator</param-name>
			<param-value>ish.oncourse.cms.webdav.Configurator</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>MiltonFilter</filter-name>
		<url-pattern>/webdav/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>RestAPI</filter-name>
		<filter-class>ish.oncourse.cms.rest.RestAPIFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>RestAPI</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>log4jServletFilter</filter-name>
		<filter-class>org.apache.logging.log4j.web.Log4jServletFilter</filter-class>
	</filter>

	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>file:///${sys:catalina.base}/conf/log4j2-cms.xml</param-value>
	</context-param>

	<filter-mapping>
		<filter-name>log4jServletFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>

</web-app>