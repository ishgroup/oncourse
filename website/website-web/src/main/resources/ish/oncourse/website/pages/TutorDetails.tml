<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<div class="tutors_details">
		<t:if t:test="${tutorFound}">
			<h2>${tutor.fullName}</h2>
			<t:if t:test="${hasResume}">
				<h4>Resume</h4>
				${tutor.resume}
			</t:if>

			<t:if t:test="${hasRoles}">
				<h4>Classes</h4>
				<div class="tutors_classes">
					<t:loop t:source="currentVisibleTutorRoles" t:value="role">
						<t:actionlink t:id="class" context="role.courseClass.recordId">${role.courseClass.uniqueIdentifier} ${role.courseClass.courseForClass.name}</t:actionlink>
					</t:loop>
				</div>

			</t:if>
		</t:if>
	</div>
</t:container>

