<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="andrey" context="production"
               runOnChange="true">
        <!-- if precondition fail, the further changes are not performed -->
        <sqlFile path="org/quartz/impl/jdbcjobstore/tables_mysql_innodb.sql"/>
    </changeSet>

    <changeSet id="2" author="pavel" context="production"
               runOnChange="true">
        <!-- if precondition fail, the further changes are not performed -->
        <preConditions onError="MARK_RAN">
            <not>
                <columnExists tableName="Discount" columnName="limitPreviousEnrolment"/>
            </not>
        </preConditions>
        <addColumn tableName="Discount">
            <column name="limitPreviousEnrolment" type="SMALLINT"></column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
