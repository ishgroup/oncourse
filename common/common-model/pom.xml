<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>common</artifactId>
		<groupId>ish.oncourse.willow.frameworks</groupId>
		<version>2.0-SNAPSHOT</version>
	</parent>

	<artifactId>common-model</artifactId>
	<groupId>ish.oncourse.willow.frameworks</groupId>
	<version>2.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Willow - Common Model Framework</name>
	<description>Contains the onCourse (Cayenne) Model and associated classes.</description>

	<properties>
		<dataSource>jdbc/oncourse</dataSource>
	</properties>
		
	<dependencies>

		<dependency>
			<groupId>ish.oncourse.angel</groupId>
			<artifactId>waCommon</artifactId>
			<version>2.1.8b7</version>
		</dependency>
		
		<dependency>
			<groupId>ish.oncourse.willow.frameworks</groupId>
			<artifactId>common-test</artifactId>
			<scope>test</scope>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.cayenne</groupId>
			<artifactId>cayenne-server</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.cayenne</groupId>
			<artifactId>cayenne-lifecycle</artifactId>
		</dependency>
		
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
		</dependency>

		<dependency>
			<groupId>opensymphony</groupId>
			<artifactId>oscache</artifactId>
		</dependency>

		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.tapestry</groupId>
			<artifactId>tapestry-ioc</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>commons-validator</groupId>
			<artifactId>commons-validator</artifactId>
		</dependency>
			
		<dependency>
			<groupId>oro</groupId>
			<artifactId>oro</artifactId>
			<version>2.0.8</version>
		</dependency>
		
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<scope>test</scope>
		</dependency>
		
	</dependencies>

	<build>
		
		<plugins>
			
			<plugin>
				<groupId>org.apache.cayenne.plugins</groupId>
				<artifactId>maven-cayenne-plugin</artifactId>
				<configuration>
					<destDir>${project.build.sourceDirectory}</destDir>
					<superPkg>ish.oncourse.model.auto</superPkg>
				</configuration>
				<executions>
					<execution>
						<id>cgen1</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourse.map.xml</map>
							<excludeEntities>BinaryInfo,Course,CourseModule,Certificate,Site,Student,Contact,College</excludeEntities>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
					<execution>
						<id>cgen2</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourseBinary.map.xml</map>
							<excludeEntities>BinaryData</excludeEntities>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
					<execution>
						<id>cgen3</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourseReference.map.xml</map>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
		
	</build>
	
</project>
