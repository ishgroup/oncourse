<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
	<changeSet id="1" author="anton" context="production"
		runOnChange="true">
		<addAutoIncrement tableName="Country" columnName="id"
			columnDataType="BIGINT" />
		<addAutoIncrement tableName="Language" columnName="id"
			columnDataType="BIGINT" />
		<addAutoIncrement tableName="Module" columnName="id"
			columnDataType="BIGINT" />
		<addAutoIncrement tableName="Qualification"
			columnName="id" columnDataType="BIGINT" />
		<addAutoIncrement tableName="TrainingPackage"
			columnName="id" columnDataType="BIGINT" />
	</changeSet>

	<changeSet id="2" author="anton" context="production"
		runOnChange="true">
		<addUniqueConstraint tableName="Module"
			columnNames="nationalCode" constraintName="nationalCode_unique" />
		<addUniqueConstraint tableName="Qualification"
			columnNames="nationalCode" constraintName="nationalCode_unique" />
		<addUniqueConstraint tableName="TrainingPackage"
			columnNames="nationalISC" constraintName="nationalISC_unique" />
	</changeSet>

</databaseChangeLog>