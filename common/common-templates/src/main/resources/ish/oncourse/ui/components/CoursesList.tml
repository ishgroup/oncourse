<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<div t:type="ui/confirmorderdialog"/>
	<t:loop source="courses" value="course">
		<span t:type="ui/courseitem" linkToLocationsMap="true" isList="true" courseItemModel="courseItemModel"></span>
		<t:if test="courseDebugInfo">
			<t:ui.internal.solrdebuginfo debugInfo="courseDebugInfo"/>
		</t:if>
	</t:loop>
	<t:if t:test="hasMoreItems">
		<div id="showMore">
			<div id="sitesParameter" style="display:none;">${sitesParameter}</div>
			<a id="showMoreCourses" href="${request.path}?${searchParamsStr}">
				<div class="showMoreAction">Show more courses</div>
			</a>
		</div>	
	</t:if>
</div>