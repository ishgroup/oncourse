#!groovyâ€‹

pipeline {
    agent { 
        label 'freebsd'
    }

    stages {
        stage('All tests') {
            script {
                currentBuild.displayName = "Willow common"
                currentBuild.description = """
<ul>
  <li><a href="${env.JOB_URL}/lastSuccessfulBuild/artifact/apidocs/build/html/index.html">API Documentation</a></li>
  <li><a href="${env.JOB_URL}/lastSuccessfulBuild/artifact/release-notes/build/html/index.html">Release notes</a></li>
  <li><a href="${env.JOB_URL}/lastSuccessfulBuild/artifact/manual/build/html/index.html">Manual</a></li>
</ul>"""
            }
            steps {
                sh "./gradlew :common:test -P willowTest_uri=jdbc:mariadb://db.office:3307 -P willowTest_dbName=willow_test_common -P shouldCreateTables=true"
            }
        }
    }

    post { 
        failure { 
            mail(
                to: "development@ish.com.au", 
                subject: "ERROR: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: "Check console output at ${env.BUILD_URL}",
            )
        }
        unstable { 
            mail(
                to: "development@ish.com.au", 
                subject: "TEST FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: "Check console output at ${env.BUILD_URL}",
            )
        }
    }

    options {
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr:'10'))
        timeout(time: 60, unit: 'MINUTES')
    }
}