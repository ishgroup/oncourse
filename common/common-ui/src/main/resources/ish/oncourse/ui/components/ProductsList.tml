<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:loop source="products" value="product">
		<span t:type="ui/productitem" product="product" isList="false"></span>
	</t:loop>
	<t:if t:test="hasMoreItems">
		<div id="showMore">
			<a id="showMoreProducts" href="${request.path}?${searchParamsStr}">
				<div class="showMoreAction">Show more products</div>
			</a>
		</div>	
	</t:if>
</div>