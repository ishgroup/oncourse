<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:loop source="voucherProducts" value="voucherProduct">
		<span t:type="ui/voucherproductitem" voucherProduct="voucherProduct" isList="false"></span>
	</t:loop>
	<t:if t:test="hasMoreItems">
		<div id="showMore">
			<a id="showMoreVoucherProducts" href="${request.path}?${searchParamsStr}">
				<div class="showMoreAction">Show more voucher products</div>
			</a>
		</div>	
	</t:if>
</div>