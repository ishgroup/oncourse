<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<ul class="courseList">
		<t:if test="titles">
			<t:loop source="courses" value="course">
					<span t:type="textile/course/titles" course="course"/>
			</t:loop>
		</t:if>

		<t:if test="details">
			<t:loop source="courses" value="course">
				<span t:type="textile/course/details" course="course"/>
			</t:loop>
		</t:if>
	</ul>
</t:container>
