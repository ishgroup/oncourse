<html t:type="pagestructure" title="literal:Instructions"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter">
	
	<span t:type="editTabs" college="college" selected="literal:instructions"/>
	
	<h1>${college.name}</h1>
	
	<div>
		<t:form t:id="resetAngelQueueForm">
			<t:submit t:id="resetAngelQueue" class="btn btn-primary" value="Reset Angel Queue"/>
		</t:form>
	</div>
	
	<h2>Queue Entity</h2>
	<div>
		<t:form t:id="queueEntityForm">
			<div class="input-append">
				<t:select t:id="entitySelect" model="entitySelectModel" blankOption="never" value="selectedEntity"/>
				<t:submit t:id="queueEntity" class="btn btn-primary" value="Queue"/>
			</div>
		</t:form>
	</div>
	
	<h2>Add Instruction</h2>
	<div>
		<t:form t:id="addInstructionForm">
			<div class="input-append">
				<t:textfield t:id="instructionMessage" t:validate="required" value="instructionMessage"/>
				<t:submit t:id="addInstruction" class="btn btn-primary" value="Add"/>
			</div>
		</t:form>
	</div>
	
	<h2>Last Instructions</h2>
	<div>
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<td>Message</td>
					<td>Status</td>
					<td>Created</td>
				</tr>
			</thead>
			<tbody>
				<t:loop t:source="lastInstructions" t:value="currentInstruction">
					<tr>
						<td>${currentInstruction.message}</td>
						<td>${currentInstruction.response}</td>
						<td>${currentInstruction.created}</td>
					</tr>
				</t:loop>
			</tbody>
		</table>
	</div>
</html>