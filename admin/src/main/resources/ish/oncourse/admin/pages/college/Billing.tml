<html t:type="pagestructure" title="literal:College Billing"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
		>

<span t:type="editTabs" college="college" selected="literal:billing" />

<h1>${college.name}</h1>

<t:form t:id="billingForm">
	<table class="table table-striped table-condensed">
		<tr>
			<td>College name</td>
			<td><t:textfield t:id="collegeName" value="collegeName" /></td>
		</tr>
		<tr>
			<td>Payment gateway password</td>
			<td><t:textfield t:id="gatewayPass" value="gatewayPass" /></td>
		</tr>
		<tr>
			<td>Skip payment authorisation</td>
			<td><t:checkbox t:id="skipPaymentAuth" value="skipPaymentAuth"/></td>
		</tr>
	</table>
	<t:errors/>

	<div class="form-actions">
		<t:submit t:id="save" class="btn btn-primary" value="Save"/>
	</div>
</t:form>


</html>
