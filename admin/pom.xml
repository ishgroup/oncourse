	<name>Willow Admin</name>

	<properties>
		<tomcat.cluster>B</tomcat.cluster>
		<tomcat-dev.port>7101</tomcat-dev.port>
		<tomcat.path>/onCourseBilling</tomcat.path>
		<training.ws.base.url>https://ws.staging.training.gov.au/</training.ws.base.url>
