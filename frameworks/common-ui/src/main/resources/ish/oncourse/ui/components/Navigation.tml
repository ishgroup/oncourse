<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<div id="cms_nav" class="clearfix">
		<ul id="cms_actions" class="left">
			<li class="pages selected"><a href="#" t:type="PageLink" page="NewPage">Create Page</a></li>
			<t:if t:test="hasCurrentNode">
				<li class="theme"><a href="#" t:type="PageLink" page="EditPage" context="webNodeService.currentNode.id">Edit Page</a></li>
			</t:if>
			<li class="blocks"><a href="">Blocks</a></li>
			<t:if t:test="hasCurrentNode">			
				<li class="sitemap"><a href="#" class="pageOptions" t:type="PageLink" page="PageOptions" context="webNodeService.currentNode.id">Options</a></li>
			</t:if>
		</ul>
		<ul id="cms_links" class="right toolbar">
			<li><a href="">Help</a></li>
			<li><a href="#" t:type="ActionLink" t:id="logout">Logout</a></li>
		</ul>
	</div>
	<script type="text/javascript">
		jQuery(function() {
			jQuery(".pageOptions").each(function() {
				var $link = jQuery(this);
				
				$link.click(function() {
					var $dialog = jQuery('<div></div>').load($link.attr('href'))
					.dialog({
						autoOpen: false,
						title: $link.attr('title'),
						width: 500,
						height: 300
					});

					$dialog.dialog('open');
					return false;
				});
			});
		});
	</script>
</t:container>