<li xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" class="${tagItemClass}">
   	<a href="${tagLink}">${tag.name}</a>
   	<t:if test="showDetails">
		<div class="taggroup_detail">
			${tag.detail}
		</div>
	</t:if>
	<t:if test="tag.webVisibleTags.empty" negate="true">
   		<ul>
   			<t:body/>
   		</ul>
   	</t:if>
</li>