<html t:type="ui/pagewrapper" bodyId="literal:SiteList" bodyClass="literal:internal-page"
 xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
	<h2>Sites</h2>
	<span t:type="ui/GoogleMapSites" sites="sites" showLocationMap="true"/>
	<ul class="site_list">
		<t:loop source="sites" value="site">
			<li>
				<h3>${site.name}</h3>
				<div class="site_map_links">
					<t:if t:test="site.hasCoordinates">
						<span>
							<a href="#" onclick="zoomMapForSite(${site.angelId})" title="click to show on the map above"
								class="class_location">show on map</a>
						</span>
					</t:if>

					<span>
						<a href="/site/${site.angelId}" class="site_directions"
							title="click to show more information and get directions">details and directions</a>
					</span>
				</div>
				<div class="site_address">
					<span class="site_address1">${site.street}</span>
					<span class="site_address2">
						${site.suburb}
						${site.postcode}
						${site.state}
					</span>
				</div>
				<br class="clear" />
			</li>
		</t:loop>
	</ul>
</html>	