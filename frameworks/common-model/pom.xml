<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
	http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>frameworks</artifactId>
		<groupId>ish.oncourse.willow.frameworks</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>common-model</artifactId>
	<packaging>jar</packaging>
	<name>Willow - Common Model Framework</name>
	<description>Contains the onCourse (Cayenne) Model and associated classes.</description>

	<dependencies>

		<dependency>
			<groupId>ish.oncourse.angel</groupId>
			<artifactId>waCommon</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.cayenne</groupId>
			<artifactId>cayenne-server</artifactId>
		</dependency>

		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
		</dependency>

		<dependency>
			<groupId>opensymphony</groupId>
			<artifactId>oscache</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.tapestry</groupId>
			<artifactId>tapestry-ioc</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.cayenne.plugins</groupId>
				<artifactId>maven-cayenne-plugin</artifactId>
				<configuration>
					<destDir>${project.build.sourceDirectory}</destDir>
					<superPkg>ish.oncourse.model.auto</superPkg>
				</configuration>
				<executions>
					<execution>
						<id>cgen1</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourse.map.xml</map>
							<!-- excluded entities should be generated manually by CayenneModeler's 
								"Generate Classes" -->
							<!-- excluding these entities depending on the onCourse datamap till 
								the CAY-1494 will be done -->
							<excludeEntitiesPattern>BinaryInfo,Course,CourseModule,Certificate,Site,Student</excludeEntitiesPattern>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
					<execution>
						<id>cgen2</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourseBinary.map.xml</map>
							<!-- excluded entities should be generated manually by CayenneModeler's 
								"Generate Classes" -->
							<!-- excluding this entity depending on the onCourse datamap till 
								the CAY-1494 will be done -->
							<excludeEntitiesPattern>BinaryData</excludeEntitiesPattern>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
					<execution>
						<id>cgen3</id>
						<configuration>
							<map>${project.build.sourceDirectory}/../resources/oncourseReference.map.xml</map>
						</configuration>
						<goals>
							<goal>cgen</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
