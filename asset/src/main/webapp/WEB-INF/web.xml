<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	metadata-complete="true" version="2.5">

	<display-name>onCourse-asset</display-name>

	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>ish.oncourse.asset</param-value>
	</context-param>

	<servlet>
		<servlet-name>BinaryData</servlet-name>
		<servlet-class>ish.oncourse.asset.servlet.BinaryDataServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AutoSuggest</servlet-name>
		<servlet-class>ish.oncourse.asset.servlet.AutoSuggestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BinaryData</servlet-name>
		<url-pattern>/servlet/binarydata</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AutoSuggest</servlet-name>
		<url-pattern>/servlet/autosuggest</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>

</web-app>